<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layoutbackground"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/imgHouse"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ilustrasirumah" />

    <TextView
        android:id="@+id/tvPerumKabMalang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgHouse"
        android:background="@drawable/custom_bg"
        android:text="PERUMAHAN KAB.MALANG"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/tvLokasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dimana lokasi yang anda cari ?"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@id/imgHouse"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp" />

    <EditText
        android:id="@+id/edtLokasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLokasi"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp" />

    <RelativeLayout
        android:id="@+id/isi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:layout_below="@id/edtLokasi"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/tvType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/putih"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" />

        <Spinner
            android:id="@+id/listTypePerumahan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_bg"
            android:entries="@array/list_type_perumahan"
            android:layout_toRightOf="@id/tvType"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="30dp" />

        <TextView
            android:id="@+id/tvHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/putih"
            android:layout_below="@id/tvType"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" />

        <TextView
            android:id="@+id/tvMin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Min"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/putih"
            android:layout_below="@id/tvType"
            android:layout_toRightOf="@id/tvHarga"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="30dp" />

        <EditText
            android:id="@+id/edtMin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMin"
            android:layout_toRightOf="@id/tvHarga"
            android:background="@drawable/custom_bg"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="30dp" />

        <TextView
            android:id="@+id/tvMax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Max"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/putih"
            android:layout_below="@id/edtMin"
            android:layout_toRightOf="@id/tvHarga"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="30dp" />

        <EditText
            android:id="@+id/edtMax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_bg"
            android:layout_below="@id/tvMax"
            android:layout_toRightOf="@id/tvHarga"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="30dp" />

        <Button
            android:id="@+id/btnCari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtMax"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_bg"
            android:text="Cari"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerInParent="true" />
    </RelativeLayout>

</RelativeLayout>